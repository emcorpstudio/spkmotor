<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIdPenyebab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Penyebab"
                    android:visibility="gone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_dark"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/tvKodePenyebab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kode Penyebab"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_dark"
                    android:maxLines="2"/>
                <TextView
                    android:id="@+id/tvNamaPenyebab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Penyebab"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_dark"
                    android:maxLines="2"/>
                <TextView
                    android:id="@+id/tvKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kode Penyebab"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_dark"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/news_row_img"
                android:layout_height="@dimen/news_row_img"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:background="@color/grey_bg"/>

    </LinearLayout>

</RelativeLayout>